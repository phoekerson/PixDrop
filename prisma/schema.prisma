generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  username  String    @unique
  password  String
  nom       String?
  prenom    String?
  avatar    String?
  bio       String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  comments  Comment[]
  likes     Like[]
  photos    Photo[]

  @@map("users")
}

model Photo {
  id                String          @id @default(cuid())
  titre             String
  description       String?
  supabaseBucketUrl String
  imageKey          String?
  width             Int?
  height            Int?
  size              Int?
  format            String?
  vues              Int             @default(0)
  telechargements   Int             @default(0)
  isPublic          Boolean         @default(true)
  isActive          Boolean         @default(true)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  auteurId          String
  comments          Comment[]
  likes             Like[]
  categories        PhotoCategory[]
  types             PhotoType[]
  auteur            User            @relation(fields: [auteurId], references: [id], onDelete: Cascade)

  @@index([auteurId])
  @@index([createdAt])
  @@map("photos")
}

model Category {
  id          String          @id @default(cuid())
  nom         String          @unique
  slug        String          @unique
  description String?
  icone       String?
  couleur     String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  photos      PhotoCategory[]

  @@map("categories")
}

model Type {
  id          String      @id @default(cuid())
  nom         String      @unique
  slug        String      @unique
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  photos      PhotoType[]

  @@map("types")
}

model PhotoCategory {
  photoId    String
  categoryId String
  assignedAt DateTime @default(now())
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  photo      Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)

  @@id([photoId, categoryId])
  @@map("photo_categories")
}

model PhotoType {
  photoId    String
  typeId     String
  assignedAt DateTime @default(now())
  photo      Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)
  type       Type     @relation(fields: [typeId], references: [id], onDelete: Cascade)

  @@id([photoId, typeId])
  @@map("photo_types")
}

model Comment {
  id        String    @id @default(cuid())
  contenu   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  auteurId  String
  photoId   String
  parentId  String?
  auteur    User      @relation(fields: [auteurId], references: [id], onDelete: Cascade)
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentReplies")
  photo     Photo     @relation(fields: [photoId], references: [id], onDelete: Cascade)

  @@index([photoId])
  @@index([auteurId])
  @@index([parentId])
  @@map("comments")
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userId    String
  photoId   String
  photo     Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, photoId])
  @@index([photoId])
  @@index([userId])
  @@map("likes")
}
